
@{
    Layout = "_AdminLayout";
}

<section class="container-fluid d-flex w-100 h-100 m-0 justify-content-center align-items-center">
     
    <div class="row mb-5 h-25 ">
        <div class="card z-3 shadow col-12 ">
                <div class="card-header">
                    Productos
                </div>
                <div class="card-body">
                    <h5 class="card-title">Administrar productos</h5>
                    <p class="card-text">Administre productos existentes,registre productos y registre a stock.</p>
                    <div class="container-fluid w-100 mt-3">
                    <a asp-action="Register" asp-controller="Producto" class="btn btn-primary">Registrar producto</a>
                    <a asp-action="GetProductos" asp-controller="Producto" class="btn btn-success">Consultar productos</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row  h-25 mb-5 ms-5">
            <div class="card z-3 shadow col-12">
                <div class="card-header">
                    Lotes
                </div>
                <div class="card-body">
                    <h5 class="card-title">Administrar Lotes</h5>
                    <p class="card-text">Administre Lotes existentes,registre lotes y consulte lotes.</p>
                   <div class="container-fluid w-100 mt-3">
                        <a asp-action="Register" asp-controller="Lote" class="btn btn-primary">Registrar lote</a>
                        <a asp-action="Lotes" asp-controller="Lote" class="btn btn-success">Consultar lotes</a>
                   </div>
                    
                </div>
            </div>
        </div>
    </div>
</section>
